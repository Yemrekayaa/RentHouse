{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Presentation/RentHouse.WebApi/bin/Debug/net8.0/RentHouse.WebApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Presentation/RentHouse.WebApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Presentation/RentHouse.WebApi/Views"
      }
    },
    {
      "name": "Launch WEBUI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Frontends/RentHouse.WebUI/bin/Debug/net8.0/RentHouse.WebUI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Frontends/RentHouse.WebUI",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Frontends/RentHouse.WebUI/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run Both Projects",
      "configurations": ["Launch API", "Launch WEBUI"]
    }
  ]
}
