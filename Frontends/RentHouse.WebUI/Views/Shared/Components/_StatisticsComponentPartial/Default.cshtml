@model RentHouse.Dto.StatisticDto.ResultStatisticDto

<section class="ftco-counter ftco-section img bg-light" id="section-counter">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg justify-content-center counter-wrap ftco-animate mx-auto">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="4">0</strong>
                        <span>Yıllık <br>Tecrübe</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@Model.TotalHouse">0</strong>
                        <span>Toplam <br>Evler</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@Model.TotalCustomer">0</strong>
                        <span>Mutlu <br>Müşteriler</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@Model.TotalRentedDays">0</strong>
                        <span>Kiralanan <br>Gün Sayısı</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>