@model PaginationDto<RentHouse.Dto.HouseDtos.ResultHouseWithLocationDto>

<section class="ftco-section ftco-no-pt bg-light">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 heading-section text-center ftco-animate mb-5">
				<span class="subheading">Sunduklarımız</span>
				<h2 class="mb-2">Öne Çıkanlar</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="carousel-car owl-carousel">
					@foreach (var item in Model.Items)
					{
						<div class="item">
							<div class="car-wrap rounded ftco-animate">
								<div class="img rounded d-flex align-items-end" style="background-image: url(@item.coverImageUrl);">
								</div>
								<div class="text">
									<h2 class="mb-0"><a href="House-single.html">@item.name</a></h2>
									<div class="d-flex ">
										<span class="cat">@item.locationName</span>

										<p class="price ml-auto">@item.WeekdayPrice.ToString("F0")₺ <span>/ Hafta İçi</span></p>
									</div>
									<div class="d-flex mb-3 ">
										<p class="price ml-auto">@item.WeekendPrice.ToString("F0")₺ <span>/ Hafta Sonu</span></p>
									</div>
									<p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Kirala</a> <a href="#" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
								</div>
							</div>
						</div>
					}					
				</div>
			</div>
		</div>
	</div>
</section>


